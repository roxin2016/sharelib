<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zsyj.wallpaper.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_wxlogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="微信登录" />

    <Button
        android:id="@+id/bt_qqlogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="QQ登录" />
    <Button
        android:id="@+id/bt_wxShareFriend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="分享到微信好友" />
    <Button
        android:id="@+id/bt_wxShareCircle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="分享到微信朋友圈" />
    <Button
        android:id="@+id/bt_qqShareFriend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="分享到QQ好友" />
    <Button
        android:id="@+id/bt_qqShareCircle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="分享到QQ空间" />
    <Button
        android:id="@+id/bt_wxPay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="微信支付" />
    <Button
        android:id="@+id/bt_alipay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="支付宝支付" />
    <Button
        android:id="@+id/bt_checkUpdae"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="检测升级" />
</LinearLayout>
